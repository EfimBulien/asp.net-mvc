@model IEnumerable<AppleStore.Models.OrderProduct>
@{
    ViewData["Title"] = "Сводная таблица по заказам продуктов";
}

<div class="container mt-5">
    <h2 class="text-center">Сводная таблица по заказам продуктов</h2>
    <div class="d-flex justify-content-between mb-3">
        <a href="/Products/Create" class="btn btn-success">Добавить запись</a>
    </div>
    <table class="table table-striped table-hover">
        <thead class="table-primary">
        <tr>
            <th>ID</th>
            <th>ID Заказа</th>
            <th>ID Продукта</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var orderProduct in Model)
        {
            <tr>
                <td>@orderProduct.IDOrderProduct</td>
                <td>@orderProduct.OrderID</td>
                <td>@orderProduct.ProductID</td>
                <td>
                    <a href="" class="btn btn-info btn-sm">Детали</a>
                    <a href="" class="btn btn-danger btn-sm">Удалить</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>