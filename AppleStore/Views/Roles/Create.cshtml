@model AppleStore.Models.Role
@{
    ViewData["Title"] = "Создать роль";
}

<div class="container mt-5">
    <h2 class="text-center">Создать роль</h2>
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="RoleName" class="form-label">Название роли</label>
            <input asp-for="RoleName" class="form-control" required />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Создать</button>
            <a href="/Roles/List" class="btn btn-secondary ms-2">Отмена</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}