@model AppleStore.Models.PayWay
@{
    ViewData["Title"] = "Добавить способ оплаты";
}

<div class="container mt-5">
    <h2 class="text-center">Добавить способ оплаты</h2>
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="PayWayMethod" class="form-label">Способ оплаты</label>
            <input asp-for="PayWayMethod" class="form-control" required />
            <span asp-validation-for="PayWayMethod" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Создать</button>
            <a href="/PayWays/List" class="btn btn-secondary ms-2">Отмена</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}