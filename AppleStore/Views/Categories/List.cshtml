@model IEnumerable<AppleStore.Models.Category>
@{
    ViewData["Title"] = "Категории товаров";
}

<div class="container mt-5">
    <h2 class="text-center">Категории товаров</h2>
    <div class="d-flex justify-content-between mb-3">
        <a href="/Categories/Create" class="btn btn-success">Добавить категорию</a>
    </div>
    <table class="table table-striped table-hover">
        <thead class="table-primary">
        <tr>
            <th>ID</th>
            <th>Категория</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.IDCategory</td>
                <td>@category.CategoryType</td>
                <td>
                    <a href="/Categories/Edit/@category.IDCategory" class="btn btn-warning btn-sm">Редактировать</a>
                    <a href="/Categories/Delete/@category.IDCategory" class="btn btn-danger btn-sm">Удалить</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>