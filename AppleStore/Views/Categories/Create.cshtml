@model AppleStore.Models.Category
@{
ViewData["Title"] = "Создать категорию";
}

<div class="container mt-5">
    <h2 class="text-center">Создать категорию</h2>
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="CategoryType" class="form-label">Название категории</label>
            <input asp-for="CategoryType" class="form-control" required />
            <span asp-validation-for="CategoryType" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Создать</button>
            <a href="/Categories/List" class="btn btn-secondary ms-2">Отмена</a>
        </div>
    </form>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}