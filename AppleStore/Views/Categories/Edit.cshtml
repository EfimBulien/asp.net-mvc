@model AppleStore.Models.Category
@{
ViewData["Title"] = "Редактировать категорию";
}

<div class="container mt-5">
    <h2 class="text-center">Редактировать категорию</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="IDCategory" />
        <div class="mb-3">
            <label asp-for="CategoryType" class="form-label">Название категории</label>
            <input asp-for="CategoryType" class="form-control" required />
            <span asp-validation-for="CategoryType" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Сохранить изменения</button>
            <a href="/Categories/List" class="btn btn-secondary ms-2">Отмена</a>
        </div>
    </form>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}