@model IEnumerable<AppleStore.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/index.css" />

<div class="container mt-3">
    <h1>Популярные товары в iPhone Store</h1>
    <div class="row" id="product-container">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4 d-flex product-card fade-in">
                <a href="@Url.Action("Product", "Catalog", new { id = product.IDProduct })" class="card glass-card h-100 text-decoration-none text-dark">
                    <img class="card-img-top" src="~/images/@product.ProductImage" alt="@product.ProductName" />
                    <div class="card-body d-flex flex-column">
                        <h4 class="card-title">@product.ProductName</h4>
                        <p class="card-text justify-content-md-around">
                            @product.ProductDescription
                        </p>
                        <p class="card-text">@product.ProductPrice руб.</p>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<script src="~/js/index.js"></script>
