@model AppleStore.Models.User
@{
    ViewData["Title"] = "Регистрация";
}

<link rel="stylesheet" href="~/css/signup.css" />

<h2>Регистрация</h2>
<form asp-action="SignUp" method="post">
    <div class="form-group">
        <label asp-for="UserLogin" class="control-label">Логин</label>
        <input asp-for="UserLogin" class="form-control" required />
        <span asp-validation-for="UserLogin" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserEmail" class="control-label">Email</label>
        <input asp-for="UserEmail" class="form-control" type="email" required />
        <span asp-validation-for="UserEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserPassword" class="control-label">Пароль</label>
        <input asp-for="UserPassword" class="form-control" type="password" required />
        <span asp-validation-for="UserPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="confirmPassword" class="control-label">Подтвердите пароль</label>
        <input id="confirmPassword" name="confirmPassword" class="form-control" type="password" required />
    </div>
    <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
</form>

<script src="~/js/signup.js"></script>