@model AppleStore.Models.LoginModel

@{
ViewData["Title"] = "SignIn";
}

<h1>Войдите в аккаунт</h1>

<form asp-antiforgery="true" asp-action="SignIn" asp-controller="Home" autocomplete="off">
    <div class="form-group">
        <label for="Login">Логин</label>
        <input type="text" id="Login" name="Login" class="form-control" value="@Model.Login" required />
    </div>
    <div class="form-group">
        <label for="Password">Пароль</label>
        <input type="password" id="Password" name="Password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Войти</button>
</form>

<div>
    <a href="@Url.Action("SignUp", "Home")">Нету аккаунта? Зарегистрируйтесь!</a>
</div>
