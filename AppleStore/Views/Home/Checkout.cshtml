@model AppleStore.Models.Cart

@{
    ViewData["Title"] = "Checkout";
}

<link rel="stylesheet" href="~/css/catalog.css" />

<div class="container mt-3">
    <h1>Оформление заказа</h1>

    <form asp-action="Checkout" method="post">
        <div class="form-group">
            <label for="address">Адрес доставки:</label>
            <input type="text" class="form-control" id="address" name="address" required />
        </div>
        <div class="form-group">
            <label for="payWayId">Способ оплаты:</label>
            <select class="form-control" id="payWayId" name="payWayId" required>
                @foreach (var payWay in ViewBag.PayWays)
                {
                    <option value="@payWay.IDPayWay">@payWay.PayWayMethod</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Оформить заказ</button>
    </form>
</div>
